{
  "manifest_version": 2,

  "name": "Here to say",
  "description": "On demand, wraps all reddit comments in a thread with the greatest rap verse of all time.",
  "version": "0.1",

  "permissions": [
    "activeTab",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.reddit.com/r/*/comments/*", "https://www.reddit.com/r/*/comments/*"],
      "js": ["script.js"]
    }
  ]
}
